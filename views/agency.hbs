<div id='left' class='sidebar'>
    <h2>Administrative Agencies</h2>
    <ul class='menu'>
        {{#agencies}}
            {{#active}}
                <li class='active'><a href='/agency/{{id}}'>{{name}}</a></li>
            {{/active}}
            {{^active}}
                <li><a href='/agency/{{id}}'>{{name}}</a></li>
            {{/active}}
        {{/agencies}}
    </ul>
    <div class='ender'></div>
</div>

<div id='main'>
    <div class='map'>
      <div id='agency-map' class='waxmap' src='/map/agency/{{agencyid}}'></div>
    </div>
    <div class='header'>
        <h2>{{pageTitle}}</h2>
        {{#drone_info}}
        <div id='drone-info'>
          <h3>Drone strikes in 2010</h3>
          <ul>
            <li><span class="label">Total incidents</span> <span class="value">{{total}} strikes</span></li>
            <li><span class="label">Non-militants killed</span> <span class="value">{{civilian_deaths_min}} {{#civilian_deaths_max}}to {{.}}{{/civilian_deaths_max}}</span></li>
            <li><span class="label">Militant deaths</span> <span class="value">{{militant_deaths_min}} {{militant_dealths_max}}</span></li>
            <li><span class="label">Militant Leaders killed</span> <span class="value">{{leader_deaths}}</span></li>
          </ul>
        </div>
        {{/drone_info}}
        <div class='profile prose'>{{{profile}}}</div>
    </div>
    <div class='content' id='content'>
        <div class='demographics-wrapper'><div class='demographics'>
            <div class='filter filter-title'>
                <h2>Filter by demographics</h2>
                <div class='facets facets-0 clearfix'>
                    <a class='ajax' id='facet-all' href='/agency/{{agencyid}}}'>All results</a>
                </div>
            </div>
            {{#demographics}}
            <div class='filter'>
                <label>{{name}}</label>
                <div class='facets facets-{{length}} clearfix'>
                    {{#facets}}
                        <a id='facet-{{../id}}-{{id}}' class='ajax{{#active}} active{{/active}}' href='/agency/{{../../agencyid}}/{{../id}}/{{id}}'>{{name}}</a>
                    {{/facets}}
                </div>
            </div>
            {{/demographics}}
        </div></div>
        <div id='ajax-content'>
        {{#groups}}
        <div class='group clearfix'>
            <h2 class='group-shortname'><a href="/question/{{id}}">{{{shortname}}}</a></h2>
            <p class='group-text'>{{{text}}}</p>
            {{#renderedQuestions}}
            <div class='question clearfix'>
                <h2 class='question-name'>{{{name}}}</h2>
                <div class='graph'>
                    {{^responses}}
                        <span class='empty'>No data available</span>
                    {{/responses}}
                    {{#responses}}
                    <span class='bar {{class}}' style='width:{{width}}px; left:{{offset}}px;'>
                        <label>
                            <strong>{{label}}</strong>
                            {{percent}}% &mdash; {{number}} respondents
                        </label>
                    </span>
                    {{/responses}}
                </div>
            </div>
            {{/renderedQuestions}}
        </div>
        {{/groups}}
        </div>
    </div>
</div>
