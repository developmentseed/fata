<div id='left' class='sidebar'>
    <h2>Sentiment Survey Questions</h2>
    <ul class='menu'>
        {{#groups}}
            {{#active}}
                <li class='active'><a href='/question/{{id}}'>{{shortname}}</a></li>
            {{/active}}
            {{^active}}
                <li><a href='/question/{{id}}'>{{shortname}}</a></li>
            {{/active}}
        {{/groups}}
    </ul>
</div>
<div id='main'>
    <div class='map'>
        <div id='question-map' class='waxmap' src='/map/question/temp'></div>
    </div>
    <div class='header'>
        <h2>{{pageTitle}}</h2>
        <h3>{{subTitle}}</h3>
    </div>
    <div class='content'>


        {{#questions}}
        <div class='group clearfix'>
            <h2 class='group-shortname'>{{name}}</h2>
            {{#agencies}}
            <div class='question clearfix'>
                <h2 class='agencey-name'>{{name}}</h2>
                <div class='graph'>
                {{#responses}}
                <span class='bar {{class}}' style='width:{{width}}px; left:{{offset}}px;'>
                    <label>
                        <strong>{{label}}</strong>
                        {{percent}}% &mdash; {{number}} respondents
                    </label>
                </span>                
                {{/responses}}
                </div>
            </div>
            {{/agencies}}
        </div>
        {{/questions}}




            <h2>{{name}}</h2>
            {{#agencies}}
                <h3>{{name}}</h3>
                {{#responses}}
                    {{label}}
                {{/responses}}
            {{/agencies}}
            {{#responses}}
                foo
                {{id}}
            {{/responses}}
        {{/questions}}
    </div>
</div>
